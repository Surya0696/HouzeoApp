{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",

    /* Vue + Vite */
    "useDefineForClassFields": true,
    "types": ["vite/client"],

    /* Strict Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Build */
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
}
